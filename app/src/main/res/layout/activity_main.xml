<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="gtadvantage.gyanjula.technologies.com.mbatestseries.fragment.Activities.MainActivity">

        <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="10dp"
            android:id="@+id/card_profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/name"
                    android:text=""/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile"
                    android:textSize="20dp"
                    android:text=""
                    android:layout_marginLeft="34dp"
                    android:layout_marginStart="34dp"
                    android:layout_below="@+id/name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="11dp" />

            </RelativeLayout>



        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/card_progress"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/card_profile"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check your Progress"
                    android:textSize="20dp"
                    android:id="@+id/text"

                    />

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/progress"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_below="@+id/text"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="23dp"
                    app:arc_stroke_width="10dp" />

                <TextView
                    android:text="Basic :"
                    android:textSize="20dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/progress"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="75dp"
                    android:layout_marginEnd="75dp"
                    android:id="@+id/basic" />

                <TextView
                    android:text="Intermediate :"
                    android:textSize="20dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/basic"
                    android:layout_alignStart="@+id/basic"
                    android:id="@+id/intermediate"
                    android:layout_below="@+id/basic" />

                <TextView
                    android:text="Advance : "
                    android:textSize="20dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/intermediate"
                    android:layout_alignLeft="@+id/intermediate"
                    android:layout_alignStart="@+id/intermediate"
                    android:id="@+id/advance" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/card_progress1"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/card_progress"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/card_progress"
            android:layout_alignStart="@+id/card_progress">
           <!-- <RelativeLayout
                android:layout_width="198dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Your Percentile"
                    android:textSize="20dp"
                    android:id="@+id/text1"

                    />


            </RelativeLayout>

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/percentile"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"

                />-->
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>