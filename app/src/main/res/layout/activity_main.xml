<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/actionbar"
            android:paddingTop="16dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.Base">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
    android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
        android:layout_height="match_parent"
        tools:context="gtadvantage.gyanjula.technologies.com.mbatestseries.fragment.Activities.MainActivity">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/card_progress"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="350dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold|italic"
                    android:text="Check your Progress"
                    android:textSize="20dp"
                    android:id="@+id/text"
                 />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="2dp"
                    android:background="#000"/>

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/progress"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/text"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="23dp"
                    app:arc_stroke_width="10dp" />

                <TextView
                    android:text="Basic :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/basic" />

                <TextView
                    android:text="Intermediate :"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/basic"
                    android:layout_alignStart="@+id/basic"
                    android:id="@+id/intermediate"
                    android:layout_below="@+id/basic" />

                <TextView
                    android:text="Advance : "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/intermediate"
                    android:layout_alignLeft="@+id/intermediate"
                    android:layout_alignStart="@+id/intermediate"
                    android:id="@+id/advance" />

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/card_progress1"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/card_progress"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/card_progress"
            android:layout_alignStart="@+id/card_progress">
           <!-- <RelativeLayout
                android:layout_width="198dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Your Percentile"
                    android:textSize="20dp"
                    android:id="@+id/text1"

                    />


            </RelativeLayout>

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/percentile"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"

                />-->
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
    </android.support.design.widget.CoordinatorLayout>